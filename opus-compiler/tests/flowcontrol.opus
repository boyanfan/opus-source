// We want to calculate 3!, the factorial of 3
var result: Int = 3
for number in range(1, 3) {
	result = result * number   // Looping over number equals to 1 and 2
}

// We want to find 13 % 3, the remainder of 13 / 3
var dividend: Int = 13
repeat {
	dividend = dividend - 3
} until (dividend < 0)   // After looping, the remainder = dividend + 3